<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/rl_page_holder"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:padding="5dp"
>

    <LinearLayout android:id="@+id/ll_group_name"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="2"
    >

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="5dp"
                  android:layout_weight=".75"
                  android:text="@string/group_name"
                  android:textSize="15dp"
                  android:textStyle="bold"
        />

        <TextView android:id="@+id/tv_group_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="right"
                  android:layout_weight="1.25"
                  android:gravity="center"
                  android:text="Group name"
                  android:textColor="@color/light_gray"
                  android:textSize="15dp"
        />


    </LinearLayout>

    <View android:id="@+id/view_05"
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_below="@id/ll_group_name"
          android:layout_marginBottom="5dp"
          android:layout_marginTop="3dp"
          android:background="@color/light_gray"
    />

    <LinearLayout android:id="@+id/ll_group_current_members"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_below="@id/view_05"
                  android:weightSum="2"
    >

        <TextView android:id="@+id/textview_current_members"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.75"
                  android:text="@string/group_info_current_members"
                  android:textSize="15dp"
                  android:textStyle="bold"
        />

        <TextView android:id="@+id/tv_members_counter"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="right"
                  android:layout_weight="1.20"
                  android:gravity="center"
                  android:text="100/100"
                  android:textColor="@color/light_gray"
                  android:textSize="15dp"
        />

    </LinearLayout>

    <View android:id="@+id/view_03"
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_below="@id/ll_group_current_members"
          android:layout_marginTop="5dp"
          android:background="@color/light_gray"
    />

    <Button android:id="@+id/button_add_members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_03"
            android:text="@string/group_info_add_members"
            android:textSize="12dp"
            android:textStyle="bold"
    />

    <View android:id="@+id/view_04"
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_below="@id/button_add_members"
          android:layout_marginTop="3dp"
          android:background="@color/light_gray"
    />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/group_members_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_04"
        android:layout_marginTop="10dp"
    />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:orientation="vertical"
    >

        <View android:id="@+id/view_01"
              android:layout_width="match_parent"
              android:layout_height="2dp"
              android:layout_below="@id/a1ms_recycler_view"
              android:layout_marginTop="3dp"
              android:background="@color/light_gray"
        />


        <Button android:id="@+id/button_exitgroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_01"
                android:text="@string/exit_group"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12dp"
        />

        <View android:layout_width="match_parent"
              android:layout_height="2dp"
              android:layout_below="@id/button_exitgroup"
              android:layout_marginTop="3dp"
              android:background="@color/light_gray"
        />
    </LinearLayout>
</RelativeLayout>
