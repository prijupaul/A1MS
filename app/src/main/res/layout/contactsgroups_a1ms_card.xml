<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:andrioid="http://schemas.android.com/tools"
              android:fitsSystemWindows="true"
>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardElevation="4dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"

    >

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal"
                      android:background="@drawable/box_background"
                      android:weightSum="3">

            <FrameLayout android:layout_width="65dp"
                          android:layout_height="match_parent"
                          android:orientation="vertical">

                <ImageView android:layout_width="50dp"
                           android:id="@+id/imageview_icon"
                           android:layout_height="match_parent"
                           android:background="@drawable/contact"/>

                <CheckBox android:layout_width="wrap_content"
                          android:layout_height="15dp"
                          android:checked="true"
                          android:id="@+id/checkbox_imageview_icon"
                          andrioid:layout_toRightOf="@id/imageview_icon"
                          android:layout_alignParentBottom="true"
                          android:layout_alignParentRight="true"
                          android:layout_gravity="right|bottom"
                          android:layout_marginBottom="5dp"
                />

            </FrameLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:orientation="vertical"
                          android:layout_marginLeft="20dp">

                <TextView
                android:id="@+id/textview_contact_name"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Priju Paul"
                />

                <View android:layout_width="match_parent"
                      android:layout_height="5dp"
                      android:background="@color/cardview_light_background"
                />

                <TextView
                android:id="@+id/textview_contact_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T: 0343322222"/>

                <TextView
                android:id="@+id/textview_contact_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E: priju.jacobpaul@mintwireless.com"/>


            </LinearLayout>

        </LinearLayout>

